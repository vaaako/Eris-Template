{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "esnext",
        "watch": true,
        "module": "commonjs",
        "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ],
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src/**/*.ts","src/**/*.json"],
    "exclude": ["node_modules/**"]
}